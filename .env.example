# ============================================
# Firebase Cloud Configuration
# ============================================
# Uncomment and fill in these values to enable cloud backend with Firebase

# Path to Firebase Service Account Key JSON file
# Download from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-key.json

# Firebase Project ID
# Found in Firebase Console > Project Settings
# FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
# Found in Firebase Console > Storage (must have .appspot.com domain)
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase API Key (optional, for client-side operations)
# FIREBASE_API_KEY=your-api-key

# ============================================
# Admin Configuration  
# ============================================
# Admin password for accessing admin panel
# IMPORTANT: Change this to a strong password!
# Example: MyP@ssw0rd123!
# ADMIN_PASSWORD=admin123

# ============================================
# Server Configuration
# ============================================
PORT=3000

# Node environment
NODE_ENV=development

# Maximum upload file size (in MB)
MAX_FILE_SIZE=50
